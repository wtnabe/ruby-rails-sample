{
  "name": "Ruby on Rails",
  "description": "A template for getting started with the popular Ruby framework.",
  "website": "http://rubyonrails.org",
  "repository": "https://github.com/heroku/ruby-rails-sample",
  "logo": "http://upload.wikimedia.org/wikipedia/commons/c/c3/Ruby_on_Rails_logo.svg",
  
  "addons": ["heroku-postgresql:hobby-dev", "papertrail"],
  "env": {
    "BUILDPACK_URL": "https://github.com/dpiddy/heroku-buildpack-ruby-minimal",
    "RAILS_ENV": "production",
    "COOKIE_SECRET": {
            "description": "This gets generated",
            "generator": "secret"
    },
    "SETUP_BY": {
            "description": "Who initiated this setup",
            "required": "true"
    }
  },
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate"
  },
}
